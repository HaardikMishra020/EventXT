<% layout("/layouts/boilerplate")%>
<div class="row">
    <div class="col-8 offset-2 mt-3">
        <h3>Event Details</h3>
    </div>

    <div class="card col-6 offset-2 show-card">
        <img
            src="<%=listing.image%>"
            class="card-img-top show-img"
            alt="listing_image"
        />
        <br class="card-body">
            <p class="card-text">
            <b>TITLE:- <%=listing.title%></b><br/>
            DESCRIPTION:- <%= listing.description %><br>
            TICKETS:- &#8377;<%= listing.price.toLocaleString("en-IN") %><br>
            COLLEGE:- <%= listing.college %><br>
            VENUE:- <%= listing.location %><br>
             
             DATE:- <%=listing.datetime.toString().slice(0,15) %>
             <br>
             TIME:- <%=listing.datetime.toString().slice(16,24) %>
            </p>
        </div>
    </div>
    <br />
    <div class="btns">
    <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
    <a href="/listings/<%=listing._id%>/share-twitter" class="btn btn-dark  mx-3">Share to Twitter</a>
        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
            <button class="btn btn-dark offset-5 ">Delete</button>
        </form>
    </div>

</div>
